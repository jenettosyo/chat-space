.message
  .contents__main__messages__data
    .contents__main__messages__data__info
      .contents__main__messages__data__info__talker
        = message.user.name
      .contents__main__messages__data__info__date
        = message.created_at.strftime("%Y/%m/%d %H:%M")
    .contents__main__messages__data__text
      - if message.content.present?
        %p.lower-message__content
          = message.content
      = image_tag message.image.url, class: 'lower-message__image' if message.image.present?